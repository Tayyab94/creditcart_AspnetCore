@model List<Braintree.Plan> 
@{
    ViewData["Title"] = "BraintreePlans";
}

<div class="row">
        @foreach (var plan in Model)
        {
            <div class="col-md-6">
                <div class="card">
                   <h3 class="card-title bg-info">@plan.Name</h3>
                    <div class="card-body">
                        <div class="card-text">
                            <p>Description : @plan.Description</p>
                            <p>Plan Price : @plan.Price</p>
                            <p>Plan Period : @plan.TrialPeriod</p>
                            <p>Plan Duration : @plan.Description</p>
                        </div>
                    </div>
                </div>

                @Html.ActionLink("Subscribe To Plan","SubscriptionPlan", "Checkout", new {@id=plan.Id},new {@class="btn btn-primary" })
            </div>
        }
</div>
